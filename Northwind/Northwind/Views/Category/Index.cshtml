@model IEnumerable<Northwind.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>


<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="Category/Image/@item.CategoryId" height="30" width="30"/>
            </td>
            <td>
                @Html.ActionLink("Upload Image", "UploadImage", new {id = item.CategoryId})
            </td>
        </tr>
    }
    </tbody>
</table>

@section Footer
{
    <footer>
        <div class="text-center">You cannot edit categories.</div>
        <div class="text-center">(c) Northwind @DateTime.Now.Year.ToString()</div>
    </footer>
}